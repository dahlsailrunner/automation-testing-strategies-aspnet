@page
@model CarvedRock.WebApp.Pages.CheckoutModel

<h2>Confirmation will be sent to: @Model.EmailAddress</h2>

<form id="checkout" class="form" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CartContents[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartContents[0].Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartContents[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartContents[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartContents[0].Total)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartContents)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td><strong>Grand Total</strong></td>
                <td><strong>@string.Format("{0:C}", Model.CartTotal)</strong></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><input type="submit" class="btn btn-danger" value="Cancel Order / Clear Cart" asp-page-handler="CancelOrder" /></td>
                <td><input id="submitCheckout" type="submit" class="btn btn-warning" value="Submit Order" asp-page-handler="SubmitOrder" /></td>
            </tr>
        </tbody>
    </table>
</form>
